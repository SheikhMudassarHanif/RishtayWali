<body>
<div class="container">
  <div class="header">
    <!-- <img src="../../public/images/download.png" alt="User Photo" class="user-photo"> -->
    <h2 class="form-title">Create Your Profile</h2>
  </div>
  <div id="blankPage">
    <button type="button" id="createProfile" onclick="openProfileForm()">Create Profile</button>
  </div>
  <form id="profileForm" class="CreationForm" style="display: none;">
    <div class="form-group">
      <h3 class="group-title">This Profile is for</h3>
      <label class="radio-label">
        <input type="radio" name="profileFor" value="Myself" checked required>
        <span class="checkmark"></span>
        Myself
      </label>
      <label class="radio-label">
        <input type="radio" name="profileFor" value="My Son" required>
        <span class="checkmark"></span>
        My Son
      </label>
    </div>
    <div class="form-group">
      <h3 class="group-title">Gender</h3>
      <label class="radio-label">
        <input type="radio" name="gender" value="Male" checked required>
        <span class="checkmark"></span>
        Male
      </label>
      <label class="radio-label">
        <input type="radio" name="gender" value="Female" required>
        <span class="checkmark"></span>
        Female
      </label>
    </div>
    <div class="form-group">
      <button type="button" onclick="goBackBlank()">Back</button>
      <button type="button" onclick="validateProfileForm()">Continue</button>
    </div>
  </form>
  <form id="personalForm" class="CreationForm" style="display: none;">
    <div class="form-group">
      <h3 class="group-title">Your Name</h3>
      <div class="name-inputs">
        <input type="text" id="firstName" name="firstName" placeholder="First Name" required><br>
        <input type="text" id="lastName" name="lastName" placeholder="Last Name" required>
      </div>
    </div>
    <div class="form-group">
      <h3 class="group-title">Date of Birth</h3>
      <div class="dob-inputs">
        <input type="number" id="day" name="day" placeholder="Day" min="1" max="31" required>
        <input type="number" id="month" name="month" placeholder="Month" min="1" max="12" required>
        <input type="number" id="year" name="year" placeholder="Year" min="1900" max="2024" required>
      </div>
    </div>
    <div class="form-group">
      <button type="button" onclick="goBackProfile()">Back</button>
      <button type="button" onclick="validatePersonalForm()">Continue</button>
    </div>
  </form>
  <!-- Religion Form -->
  <form id="religionForm" class="CreationForm" style="display: none;">
    <div class="form-group">
      <h3 class="group-title">Your Religion</h3>
      <select id="religion" name="religion" class="select-input" required>
        <option value="" disabled selected>Select Religion</option>
        <option value="Islam">Islam</option>
        <option value="Christianity">Christianity</option>
        <option value="Hinduism">Hinduism</option>
        <!-- Add more options as needed -->
      </select>
    </div>
    <div class="form-group">
      <h3 class="group-title">Community</h3>
      <select id="community" name="community" class="select-input" required>
        <option value="" disabled selected>Select Community</option>
        <option value="Urdu">Urdu</option>
        <option value="English">English</option>
        <option value="Chinese">Chinese</option>
        <option value="German">German</option>
        <!-- Add more options as needed -->
      </select>
    </div>
    <div class="form-group">
      <h3 class="group-title">Living in</h3>
      <select id="country" name="country" class="select-input" required>
        <option value="" disabled selected>Select Country</option>
        <option value="Pakistan">Pakistan</option>
        <option value="USA">USA</option>
        <option value="UK">UK</option>
        <!-- Add more options as needed -->
      </select>
    </div>
    <div class="form-group">
      <button type="button" onclick="goBackPersonal()">Back</button>
      <button type="button" onclick="validateReligionForm()">Continue</button>
    </div>
  </form>
<!-- Measure Form -->
<form id="measureForm" class="CreationForm" style="display: none;">
  <div class="form-group">
    <h3 class="group-title">Measurements</h3>
    <div class="input-group">
      <label for="weight" class="input-label">Weight:</label>
      <input type="number" id="weight" name="weight" class="input-field" placeholder="Enter weight in kg" required>
    </div>
    <div class="input-group">
      <label for="height" class="input-label">Height:</label>
      <input type="number" id="height" name="height" class="input-field" placeholder="Enter height in cm" required>
    </div>
    <h3 class="group-title">Color</h3>
    <div class="select-group">
      <label for="skinColor" class="input-label">Skin Color:</label>
      <select id="skinColor" name="skinColor" class="select-input" required>
        <option value="" disabled selected>Select Skin Color</option>
        <option value="Brown">Brown</option>
        <option value="Blue">Blue</option>
        <option value="Black">Black</option>
        <option value="White">White</option>
        <option value="Golden">Golden</option>
        <!-- Add more options as needed -->
      </select>
    </div>
    <div class="select-group">
      <label for="hairColor" class="input-label">Hair Color:</label>
      <select id="hairColor" name="hairColor" class="select-input" required>
        <option value="" disabled selected>Select Hair Color</option>
        <option value="Brown">Brown</option>
        <option value="Black">Black</option>
        <option value="Blonde">Blonde</option>
        <option value="Red">Red</option>
        <option value="Gray">Gray</option>
        <!-- Add more options as needed -->
      </select>
    </div>
  </div>
  <div class="form-group">
    <button type="button" onclick="goBackReligion()" class="form-button">Back</button>
    <button type="button" onclick="validateMeasureForm()">Continue</button>
  </div>
</form>
<!-- Lifestyle Form -->
<form id="lifestyleForm" class="CreationForm" style="display: none;">
  <div class="form-group">
    <h3 class="group-title">Occupation</h3>
    <select id="occupation" name="occupation" class="select-input" required>
      <option value="" disabled selected>Select Occupation</option>
      <option value="Student">Student</option>
      <option value="Service">Service</option>
      <option value="Business">Business</option>
      <option value="Retired">Retired</option>
      <option value="Unemployed">Unemployed</option>
    </select>
  </div>
  <div class="form-group">
    <h3 class="group-title">Education Level</h3>
    <select id="educationLevel" name="educationLevel" class="select-input" required>
      <option value="" disabled selected>Select Education Level</option>
      <option value="Bachelors">Bachelors</option>
      <option value="Masters">Masters</option>
      <option value="PhD">PhD</option>
      <option value="O Levels">O Levels</option>
      <option value="A Levels">A Levels</option>
      <option value="None">None</option>
    </select>
  </div>
  <div class="form-group">
    <h3 class="group-title">Exercise Habits</h3>
    <select id="exerciseHabits" name="exerciseHabits" class="select-input" onchange="toggleSportsOptions()" required>
      <option value="" disabled selected>Select Exercise Habits</option>
      <option value="None">None</option>
      <option value="Occasionally">Occasionally</option>
      <option value="Regularly">Regularly</option>
    </select>
  </div>
  <div class="form-group" id="sportsOptions" style="display: none;">
    <h3 class="group-title">Favorite Sports</h3>
    <div class="checkbox-group">
      <label class="checkbox-label">
        <input type="checkbox" name="sports" value="Football"> Football
      </label>
      <label class="checkbox-label">
        <input type="checkbox" name="sports" value="Cricket"> Cricket
      </label>
      <label class="checkbox-label">
        <input type="checkbox" name="sports" value="Tennis"> Tennis
      </label>
      <label class="checkbox-label">
        <input type="checkbox" name="sports" value="Badminton"> Badminton
      </label>
      <label class="checkbox-label">
        <input type="checkbox" name="sports" value="Basketball"> Basketball
      </label>
      <label class="checkbox-label">
        <input type="checkbox" name="sports" value="Swimming"> Swimming
      </label>
    </div>
  </div>
  <div class="form-group">
    <button type="button" onclick="goBackMeasure()" class="form-button">Back</button>
    <button type="submit" class="form-button" id="redirectButton">Submit</button>
  </div>
</form>
</div>
<script>


  
  const redirectButton = document.getElementById('redirectButton');
  redirectButton.addEventListener('click', submitForm());
  function submitForm() {
    const formData = {
      profileFor: document.querySelector('input[name="profileFor"]:checked').value,
      gender: document.querySelector('input[name="gender"]:checked').value,
      firstName: document.getElementById('firstName').value,
      lastName: document.getElementById('lastName').value,
      dob: {
        day: parseInt(document.getElementById('day').value),
        month: parseInt(document.getElementById('month').value),
        year: parseInt(document.getElementById('year').value)
      },
      religion: document.getElementById('religion').value,
      community: document.getElementById('community').value,
      country: document.getElementById('country').value,
      measurements: {
        weight: parseInt(document.getElementById('weight').value),
        height: parseInt(document.getElementById('height').value),
        skinColor: document.getElementById('skinColor').value,
        hairColor: document.getElementById('hairColor').value
      },
      occupation: document.getElementById('occupation').value,
      educationLevel: document.getElementById('educationLevel').value,
      exerciseHabits: document.getElementById('exerciseHabits').value,
      sports: Array.from(document.querySelectorAll('input[name="sports"]:checked')).map(el => el.value)
    };
    fetch('/submitprofile', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(formData)
    })
    .then(response => response.json())
    .then(data => {
      console.log('Profile submitted successfully:', data);
    })
    .catch(error => {
      console.error('Error submitting profile:', error);
    });
  }










