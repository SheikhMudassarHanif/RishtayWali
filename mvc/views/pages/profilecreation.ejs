function openProfileForm() {
  document.getElementById('blankPage').style.display = 'none';
  document.getElementById('profileForm').style.display = 'block';
}

function goBackBlank() {
  document.getElementById('profileForm').style.display = 'none';
  document.getElementById('blankPage').style.display = 'block';
}

function validateProfileForm() {
  const profileForm = document.getElementById('profileForm');
  if (profileForm.checkValidity()) {
    profileForm.style.display = 'none';
    document.getElementById('personalForm').style.display = 'block';
  } else {
    profileForm.reportValidity();
  }
}

function goBackProfile() {
  document.getElementById('personalForm').style.display = 'none';
  document.getElementById('profileForm').style.display = 'block';
}

function validatePersonalForm() {
  const personalForm = document.getElementById('personalForm');
  if (personalForm.checkValidity()) {
    personalForm.style.display = 'none';
    document.getElementById('religionForm').style.display = 'block';
  } else {
    personalForm.reportValidity();
  }
}

function goBackPersonal() {
  document.getElementById('religionForm').style.display = 'none';
  document.getElementById('personalForm').style.display = 'block';
}

function validateReligionForm() {
  const religionForm = document.getElementById('religionForm');
  if (religionForm.checkValidity()) {
    religionForm.style.display = 'none';
    document.getElementById('measureForm').style.display = 'block';
  } else {
    religionForm.reportValidity();
  }
}

function goBackReligion() {
  document.getElementById('measureForm').style.display = 'none';
  document.getElementById('religionForm').style.display = 'block';
}

function validateMeasureForm() {
  const measureForm = document.getElementById('measureForm');
  if (measureForm.checkValidity()) {
    measureForm.style.display = 'none';
    document.getElementById('lifestyleForm').style.display = 'block';
  } else {
    measureForm.reportValidity();
  }
}

function goBackMeasure() {
  document.getElementById('lifestyleForm').style.display = 'none';
  document.getElementById('measureForm').style.display = 'block';
}

function toggleSportsOptions() {
  const exerciseHabits = document.getElementById('exerciseHabits').value;
  const sportsOptions = document.getElementById('sportsOptions');
  if (exerciseHabits === 'Regularly') {
    sportsOptions.style.display = 'block';
  } else {
    sportsOptions.style.display = 'none';
  }
}
</script>
