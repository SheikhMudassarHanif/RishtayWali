<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>True Love Profiles</title>
    <style>
        /* Add general styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
    margin: 0;
    padding: 0;
}

h1 {
    text-align: center;
    margin-top: 20px;
}

.profiles-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.profile {
    width: 200px;
    margin: 20px;
    text-align: center;
}

.heart {
    width: 100px;
    height: 90px;
    background-color: #ff6b6b;
    position: relative;
    margin: auto;
}

.heart::before,
.heart::after {
    content: "";
    width: 50px;
    height: 80px;
    background-color: #ff6b6b;
    position: absolute;
    border-radius: 50px 50px 0 0;
    transform: rotate(-45deg);
    transform-origin: 0 100%;
}

.heart::before {
    top: -50px;
    left: 50px;
}

.heart::after {
    top: -50px;
    left: 0;
}

    </style>
</head>
<body>
    <h1>True Love Profiles</h1>
    <div class="profiles-container">
        <% profiles.forEach(function(profile) { %>
            <div class="profile">
                <div class="heart"></div>
                <h2><%= profile.firstName %> <%= profile.lastName %></h2>
                <p>Gender: <%= profile.gender %></p>
                <p>Religion: <%= profile.religion %></p>
                <!-- Add more profile details here as needed -->
            </div>
        <% }) %>
    </div>
</body>
</html>
